<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:id="@+id/fr_scores_ll_container"
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
        android:orientation="horizontal"
        android:background="@drawable/row_odd_background"
        android:layout_width="match_parent"
        android:layout_height="40dp">

    <TextView
            android:id="@+id/row_scores_tv_home"
            android:layout_weight="4"
            android:layout_width="0dp"
            tools:text="Home"
            android:gravity="center_vertical|start"
            android:paddingStart="12dp"
            android:textSize="16sp"
            android:fontFamily="@font/gordita_bold"
            android:layout_height="match_parent"/>


    <TextView
            android:id="@+id/row_scores_tv_live_score"
            tools:text="0 - 0"
            android:gravity="center"
            android:layout_weight="2"
            android:background="@drawable/row_scores_result_background"
            android:layout_width="0dp"
            android:layout_margin="4dp"
            android:fontFamily="@font/gordita_medium"
            android:textColor="@color/icon_bg"
            android:layout_height="match_parent"/>

    <TextView
            android:id="@+id/row_scores_tv_away"
            android:layout_weight="4"
            android:layout_width="0dp"
            tools:text="Away"
            android:gravity="center_vertical|end"
            android:paddingEnd="12dp"
            android:textSize="16sp"
            android:fontFamily="@font/gordita_bold"
            android:layout_height="match_parent"/>

</LinearLayout>