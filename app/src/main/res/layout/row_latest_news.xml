<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/row_news_background">
    <ImageView android:id="@+id/row_latest_news_iv_image" android:layout_marginStart="8dp"
               tools:src="@android:drawable/btn_star"
               android:layout_centerVertical="true" android:layout_width="120dp"
               android:layout_height="80dp"/>
    <TextView
            android:id="@+id/row_latest_news_tv_title"
            android:layout_toEndOf="@id/row_latest_news_iv_image"
            android:layout_width="match_parent"
            android:padding="2dp"
            android:layout_marginTop="4dp"
            android:layout_alignTop="@id/row_latest_news_iv_image"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:fontFamily="@font/gordita_bold"
            tools:text="Lorem ipsum dolar sitame .."
            android:layout_height="wrap_content"

    />
    <TextView
            android:id="@+id/row_latest_news_tv_date"
            android:layout_toEndOf="@id/row_latest_news_iv_image"
            android:layout_width="match_parent"
            android:layout_alignBottom="@id/row_latest_news_iv_image"
            android:padding="2dp"
            android:layout_marginBottom="4dp"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:fontFamily="@font/gordita_light"
            tools:text="Tuesday, 1 Jan 20, 20:00"
            android:layout_height="wrap_content"

    />
</RelativeLayout>
